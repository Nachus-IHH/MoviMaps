<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permisos necesarios para mapas -->
    <!-- Accede a la ubicacion aproximada del dispositivo -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Accede a la ubicacion precisa del dispositivo (utilizando GPS, WIFI y DATOS MOVILES) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Permite acceder a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Accede a la informacion sobre el estado de redes;
        incluye si esta conectado a una red y de que tipo; ESTADO GENERAL DE LA RED (WIFI o datos moviles) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Permite escribir datos en el almacenamiento externo del dispositivo-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Accede a la informacion sobre el estado de las redes WIFI; ESTADO ESPECIFICO DE LA CONEXION WIFI-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoviMaps">
        <activity
            android:name=".RegistroActivity"
            android:exported="false" />
        <activity
            android:name=".forms.EventActivity"
            android:exported="false" />
        <activity
            android:name=".forms.MipymeActivity"
            android:exported="false" />
        <activity
            android:name=".forms.EventStopActivity"
            android:exported="false" />
        <activity
            android:name=".forms.RouteActivity"
            android:exported="false" />
        <!-- android:theme="@style/SplashTheme" -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>